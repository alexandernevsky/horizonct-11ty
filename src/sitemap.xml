---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% set buildDate = "now" | sitemapDate %}
  <!-- English Pages -->
  <url>
    <loc>{{ settings.url }}/</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/"/>
  </url>
  <url>
    <loc>{{ settings.url }}/about</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/about"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/about"/>
  </url>
  <url>
    <loc>{{ settings.url }}/careers</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/careers"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/careers"/>
  </url>
  <url>
    <loc>{{ settings.url }}/news</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>
  <url>
    <loc>{{ settings.url }}/customers</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/customers"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/customers"/>
  </url>
  <url>
    <loc>{{ settings.url }}/contact</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/contact"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/contact"/>
  </url>
  <url>
    <loc>{{ settings.url }}/privacy-policy</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.3</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/privacy-policy"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/privacy-policy"/>
  </url>
  <!-- Russian Pages -->
  <url>
    <loc>{{ settings.url }}/ru/</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/"/>
  </url>
  <url>
    <loc>{{ settings.url }}/ru/about</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/about"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/about"/>
  </url>
  <url>
    <loc>{{ settings.url }}/ru/careers</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/careers"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/careers"/>
  </url>
  <url>
    <loc>{{ settings.url }}/ru/customers</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/customers"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/customers"/>
  </url>
  <url>
    <loc>{{ settings.url }}/ru/contact</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/contact"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/contact"/>
  </url>
  <url>
    <loc>{{ settings.url }}/ru/privacy-policy</loc>
    <lastmod>{{ buildDate }}</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.3</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ settings.url }}/privacy-policy"/>
    <xhtml:link rel="alternate" hreflang="ru" href="{{ settings.url }}/ru/privacy-policy"/>
  </url>
  {% for post in collections.news %}
  <url>
    <loc>{{ settings.url }}{{ post.url }}</loc>
    {% if post.date %}
    <lastmod>{{ post.date | sitemapDate }}</lastmod>
    {% else %}
    <lastmod>{{ buildDate }}</lastmod>
    {% endif %}
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
  {% endfor %}
  {% for job in collections.jobs %}
  <url>
    <loc>{{ settings.url }}{{ job.url }}</loc>
    {% if job.date %}
    <lastmod>{{ job.date | sitemapDate }}</lastmod>
    {% else %}
    <lastmod>{{ buildDate }}</lastmod>
    {% endif %}
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}
</urlset>

